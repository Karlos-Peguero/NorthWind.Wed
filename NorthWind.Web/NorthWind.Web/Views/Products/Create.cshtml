
@model NorthWind.Web.ViewModels.Products.ProductsCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>New Product</h1>


@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        <strong>@Model.ErrorMessage</strong>
    </div>
}


<form asp-action="Create">
    
    <div class="mb-2">
        <label asp-for="ProductName" >Product Name</label>
        <input type="text" asp-for="ProductName" name="ProductName"  class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="CategoryID">Category</label>
        <select asp-for="CategoryID" class="form-control" asp-items='new SelectList(Model.Categories,nameof(Category.CategoryId),nameof(Category.CategoryName))'>  </select>
        <span asp-validation-for="CategoryID" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="SupplierID">Supplier</label>
        <select asp-for="SupplierID" class="form-control" asp-items='new SelectList(Model.Suppliers,nameof(Supplier.SupplierId),nameof(Supplier.CompanyName))'>  </select>
        <span asp-validation-for="SupplierID" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="UnitPrice">Unit Price</label>
        <input type="text" asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>
    
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-light" >Cancel</a>
    </div>
</form>

