@model NorthWind.Web.ViewModels.Products.ProductsEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product #@Model.ProductID</h1>


@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        <strong>@Model.ErrorMessage</strong>
    </div>
}


<form asp-action="Edit">

    <input type="hidden" asp-for="ProductID" />

    <div class="mb-2">
        <label asp-for="ProductName">Product Name</label>
        <input type="text" asp-for="ProductName" name="ProductName" placeholder="Product Name..." class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="CategoryID">Category</label>
        <select asp-for="CategoryID" class="form-control" asp-items='new SelectList(Model.Categories,nameof(Category.CategoryId),nameof(Category.CategoryName))'>  </select>
        <span asp-validation-for="CategoryID" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="SupplierID">Supplier</label>
        <select asp-for="SupplierID" class="form-control" asp-items='new SelectList(Model.Suppliers,nameof(Supplier.SupplierId),nameof(Supplier.CompanyName))'>  </select>
        <span asp-validation-for="SupplierID" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="UnitPrice">Unit Price</label>
        <input type="text" asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </div>
</form>
